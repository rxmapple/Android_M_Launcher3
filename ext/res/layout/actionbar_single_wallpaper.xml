<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:launcher="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

    <com.android.launcher3.AlphaDisableableButton
        android:id="@+id/set_wallpaper_button"
        style="@style/ActionBarSetWallpaperStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_actionbar_accept"
        android:drawablePadding="8dp"
        android:gravity="end|center_vertical"
        android:paddingEnd="20dp"
        android:layout_weight="2"
        android:text="@string/wallpaper_instructions" >
    </com.android.launcher3.AlphaDisableableButton>

    <Switch
        android:id="@+id/single_wallpaper_switch"
        style="@style/ActionBarSetWallpaperStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="end|center_vertical"
        android:visibility="gone"
        android:layout_gravity="end|center_vertical"
        android:text="@string/single_wallpaper" />

</LinearLayout>